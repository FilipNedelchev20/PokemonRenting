@using PokemonRenting.Web.Models.ViewModels.Pokemon
@model CreatePokemonViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container"
    <h2>Add New Pokemon</h2>
    <hr />

    <form asp-action="Create" asp-controller="Pokemon" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PokemonName">Pokemon Name:</label>
                    <input type="text" class="form-control" id="PokemonName" name="PokemonName" required />
                </div>
                 <div class="form-group"
                    <label for="PokemonType">Pokemon Type:</label>
                    <input type="text" class="form-control" id="PokemonType" name="PokemonType" required />
                </div>
                <div class="form-group">
                    <label for="Generation">Pokemon Gen:</label>
                    <input type="text" class="form-control" id="Generation" name="Generation" required />
                </div>
            </div>
             <div class="col-md-4">
                <div class="form-group">
                    <label for="PokemonNumber">Pokemon Number:</label>
                    <input type="text" class="form-control" id="PokemonNumber" name="PokemonNumber" required />
                </div>
                 <div class="form-group">
                    <label for="PokemonColor">Pokemon Color:</label>
                    <input type="text" class="form-control" id="PokemonColor" name="PokemonColor" required />
                </div>
                <div class="form-group">
                    <label for="PokemonDescription">Pokemon Description:</label>
                    <textarea  class="form-control" id="PokemonDescription" name="PokemonDescription" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PokemonImageUrl">Pokemon Image:</label>
                    <input type="file" class="form-control-file" id="PokemonImageUrl" name="PokemonImageUrl" required />
                </div>
                 <div class="form-group">
                    <label for="PokemonPrice">Pokemon Price:</label>
                    <input type="number" class="form-control" id="PokemonPrice" name="PokemonPrice" required />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="IsAvailable"></input>
                    <label class="form-check-label" for="IsAvailable">Is Available</label>
                </div>
            </div>
        </div>

        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Pokemon" class="btn btn-secondary">Back</a>
        </div>
     </form>
 </div>
