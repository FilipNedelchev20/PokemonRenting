@using PokemonRenting.Web.Models.ViewModels.Pokemon
@model EditPokemonViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h2>Add New Pokemon</h2>
    <hr />

    <form asp-action="Edit" asp-controller="Pokemon" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" name="Id"/>
                    <label for="PokemonName">Pokemon Name:</label>
                    <input type="text" class="form-control" asp-for="PokemonName" required />
                </div>
                <div class="form-group">
                    <label for="PokemonType">Pokemon Type:</label>
                    <input type="text" class="form-control" asp-for="PokemonType" required />
                </div>
                <div class="form-group">
                    <label for="Generation">Pokemon Gen:</label>
                    <input type="text" class="form-control" asp-for="Generation" required />
                </div>
            </div>
           
             <div class="col-md-4">
                <div class="form-group">
                    <label for="PokemonNumber">Pokemon Number:</label>
                    <input type="text" class="form-control" asp-for="PokemonNumber" required />
                </div>
                <div class="form-group">
                    <label for="PokemonColor">Pokemon Color:</label>
                    <input type="text" class="form-control" asp-for="PokemonColor" required />
                </div>
                <div class="form-group">
                    <label for="PokemonDescription">Pokemon Description:</label>
                    <textarea class="form-control" asp-for="PokemonDescription" required></textarea>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="PokemonImageUrl">Pokemon Image:</label>
                    <input type="file" class="form-control-file" id="PokemonImageUrl" name="PokemonImageUrl" required />
                </div>
                <div class="form-group">
                    <label for="PokemonPrice">Pokemon Price:</label>
                    <input type="number" class="form-control" asp-for="PokemonPrice" required />
                </div>
                <div class="form-group">
                    <label for="DailyRate">Daily Rate:</label>
                    <input type="number" class="form-control" asp-for="DailyRate" required />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="IsAvailable" />
                    <label class="form-check-label" for="IsAvailable">Is Available</label>
                </div>
            </div>
            
        </div>

        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Pokemon" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
