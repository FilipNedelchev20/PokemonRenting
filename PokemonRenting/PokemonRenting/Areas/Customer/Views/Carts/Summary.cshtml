@model PokemonRenting.Web.Models.ViewModels.CartVM
@{
    ViewData["Title"] = "Summary";
}
<form method="post">
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Shipping details</h5>
                </div>

            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card mb-4">
                <div class="card-header py-3">
                    <h5 class="mb-0">Summary</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var details in @Model.ListOfCart)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                                <span>@details.Pokemon.PokemonName</span>
                                <span>Daily Rate: @details.Pokemon.DailyRate</span>
                                <span>Total Amount: @details.TotalAmount</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                            <div>
                                <strong>Total amount</strong>
                                <strong>
                                    <p class="mb-0">(including VAT)</p>
                                </strong>
                            </div>
                            <span><strong>@Model.OrderHeader.TotalAmount BGN</strong></span>
                        </li>
                    </ul>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">
                        Make purchase
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
