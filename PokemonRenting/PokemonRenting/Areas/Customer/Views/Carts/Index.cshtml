@model List<PokemonRenting.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}

<div class="cart-container">
    <h2>Your Cart</h2>
    @if (Model == null || !Model.Any())
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Pokemon Name</th>
                    <th>Pokemon Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cartItem in Model)
                {
                    <tr>
                        <td>@cartItem.Pokemon.PokemonName</td>
                        <td>@cartItem.Pokemon.PokemonType</td>
                        <td>
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="cartItemId" value="@cartItem.Id" />
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<style>
    .cart-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .table {
        width: 100%;
    }
</style>
